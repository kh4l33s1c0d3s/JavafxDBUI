<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="800.0" prefWidth="500.0" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="de.hawh.eei.isc.dbui.AddScreen">
    <Text text="Um einen Ehemaligen hinzuzufügen füllen Sie bitte das Formular aus und bestätigen Sie ihre Eingabe mit Ok"
          GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Nachname:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="E-Mail Adresse:" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Geburtsname:" GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <HBox spacing="10" alignment="bottom_left"
          GridPane.columnIndex="0" GridPane.rowIndex="5">
        <Button text="OK"
                onAction="#handleSubmit"/>
    </HBox>

    <Text fx:id="ok"
          GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button text="Abbrechen"
                onAction="#cancel"/>
    </HBox>

    <Text fx:id="Cancel"
          GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
